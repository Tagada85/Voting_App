doctype html
html(lang="en")
	head
		title Voting App
		script(src="https://code.jquery.com/jquery-3.1.0.js" integrity="sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk=" crossorigin="anonymous")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.6/Chart.js")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
		link(rel='stylesheet' href='/css/styles.css')
	body.container.text-center
		header.navbar
			ul.nav.nav-tabs.pull-right
				li
					a(href='/polls') Home
				li
					a(href="/polls/new_poll") Create new poll
				if user
					li
						a(href='/polls/my_polls') My polls
					li
						a(href="/polls/auth/logout").btn.btn-danger Log Out
				else
					li
						a(href='/polls/auth/login/github').btn.btn-success Log In GitHub
	block content